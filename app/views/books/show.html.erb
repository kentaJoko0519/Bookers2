<!--Book detail-->
<h1>User info</h1>
    <p><%= image_tag current_user.get_profile_image(100,100) %></p>
    <p>name  <%= current_user.name %></p>
    <p>introduction <%= current_user.introduction %></p>
    <p><%= button_to "Edit", edit_user_path(@user.id) %></p>


<h1>New Book</h1>
  <%= form_with model: @newbook do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Creat Book' %>
  <% end %>

<h1>Book detail</h1>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p><%= link_to @user.name, user_path(@user.id) %></p>
  <p><%= link_to @book.title, book_path(@book.id) %></p>
  <p><%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= button_to "Edit", edit_book_path(@book.id) %>
  <% end %>
  <% if @book.user == current_user %>
    <%= button_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
</div>
