<!--Book detail-->
<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'list', book: @book, user: @user %><!--部分テンプレート-->

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <td>
          <%= link_to user_path(@user.id) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
            <%= button_to "Edit", edit_book_path(@book.id), method: :get %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
            <%= button_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </td>
      </table>
      <%= link_to @user.name, user_path(@user.id)  %>
    </div>
  </div>
</div>



