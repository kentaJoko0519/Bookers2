<!--Users-->
<h1>User info</h1>
    <p><%= image_tag current_user.get_profile_image(100,100) %></p>
    <p>name  <%= current_user.name %></p>
    <p>introduction <%= @user.introduction %></p>
    <p><%= button_to "Edit", edit_user_path(@user.id) %></p>


<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Creat Book' %>
  <% end %>

<h1>Users</h1>
<% @users.each do |user| %>
  <p>image <%= image_tag user.get_profile_image(100,100) %></p>
  <p>name  <%= user.name %></p>
  <p><%= link_to "Show", user_path(user.id) %></p>
<% end %>

